{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}

{% if breadcrumb and not is_404 %}
  <nav>
    <ol class="breadcrumb">
      {% for item in breadcrumb %}
        {% if item.url %}
          <li class="breadcrumb-item">
            <a href="{{ item.url }}">
              {{ item.text }}
            </a>
          </li>
        {% else %}
          <li class="breadcrumb-item active">
            {{ item.text }}
          </li>
        {% endif %}
      {% endfor %}
    </ol>
  </nav>
{% endif %}
